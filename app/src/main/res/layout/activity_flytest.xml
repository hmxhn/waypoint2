<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_flytest"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_background">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="飞行模式"
            android:layout_marginLeft="5dp"
            android:textSize="25sp"
            android:textColor="@color/qmui_config_color_white"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无人机信息"
            android:textSize="21dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="经度:N/A 纬度: N/A  高度: N/A"
            android:textSize="18dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/btn_takeoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="起飞"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/round_btn"/>
        <Button
            android:id="@+id/btn_cancel_takeoff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消起飞"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/round_btn"/>
        <Button
            android:id="@+id/btn_land"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="降落"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/round_btn"/>
        <Button
            android:id="@+id/btn_cancel_land"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="取消降落"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/round_btn"/>
        <Button
            android:id="@+id/btn_goHome"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返航"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/round_btn"/>
        <Button
            android:id="@+id/btn_cancel_goHome"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消返航"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/round_btn"/>
    </LinearLayout>
</LinearLayout>